<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.BattleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_have_a_winner"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_marginTop="20dp"/>


        <include
            android:id="@+id/ourHeroWeathermon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_maintenance_recycler_item"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="70sp"
            android:text="Defeated"
            android:textAlignment="center"
            />

        <include
            android:id="@+id/ourVillanWeathermon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_maintenance_recycler_item"
            android:layout_margin="16dp"
            />

        />




    </LinearLayout>
</FrameLayout>