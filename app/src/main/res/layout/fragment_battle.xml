<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.BattleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prepair For Battle!"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="45sp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:id="@+id/arenaNameIDTextView"
        />

        <include
            android:id="@+id/ourHeroWeathermon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_maintenance_recycler_item"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="70sp"
            android:text="VS"
            android:textAlignment="center"
            />

        <include
            android:id="@+id/ourVillanWeathermon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_maintenance_recycler_item"
            android:layout_margin="16dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTrainingFight"
            android:background="@drawable/button_fight"
            android:layout_margin="16dp"
            android:contentDescription="@string/start_training_combat"
            android:layout_gravity="center"
            />




    </LinearLayout>
</FrameLayout>